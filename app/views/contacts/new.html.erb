<h1>お問い合わせフォーム</h1>
<% if @contact.errors.any?%>
	<%= @contact.errors.count%>件
	<%= @contact.errors.full_messages.each do |msg|%>
		<%= msg %>
	<% end %>
<% end %>
		
<%= form_with(model:@contact,local: true) do |f| %>
	<%= f.label :name, "お名前" %>
	<%= f.text_field :name %>
	<%= f.label :email, "メールアドレス" %>
	<%= f.text_field :email %>
	<%= f.label :content, "お問い合わせ内容" %>
	<%= f.text_field :content %>
	<%= f.submit value="送信" %>
<% end %>
